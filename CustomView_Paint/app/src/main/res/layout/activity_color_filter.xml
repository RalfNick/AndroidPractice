<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ColorFilterActivity">

    <wang.ralf.painttest.view.colorfilter.LightingColorFilterView
        android:id="@+id/light_color_filter_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <wang.ralf.painttest.view.colorfilter.PorterDuffColorFilterView
        android:id="@+id/light_color_filter_view1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <wang.ralf.painttest.view.colorfilter.ColorMatrixColorFilterView
        android:id="@+id/light_color_filter_view2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

</LinearLayout>